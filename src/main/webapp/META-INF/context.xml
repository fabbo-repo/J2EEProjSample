<!-- EspecificaciÃ³n del pool de conexiones 
name: nombre que queramos
maxActive: maxi conexiones a la base de datos
maxIdle: max conexiones inactivas
maxWait: tiempo max de espera para cliente (en ms)
-->
<Context>
	<Resource 
		name="jdbc/postgres" 
		auth="Container" 
		type="javax.sql.DataSource"
		maxActive="15"
		maxIdle="3"
		maxWait="5000"
		username="..."
		password="..."
		driverClassName="org.postgresql.Driver"
		url="jdbc:postgresql://ipaddr/database">
	</Resource>
</Context>
